{
    "name": "bongatech/api",
    "type": "library",
    "description": "PHP Bongatech API",
    "keywords": [
        "api",
        "bongatech"
    ],
    "homepage": "https://github.com/BongaTech/PHP-SDK",
    "license": "MIT",
    "authors": [
        {
            "name": "Makamu Evans",
            "email": "makamuevans@gmail.com",
            "homepage": "https://makamuevans.co.ke",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^7.2|^8.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "BongaTech\\Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BongaTech\\Api\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
